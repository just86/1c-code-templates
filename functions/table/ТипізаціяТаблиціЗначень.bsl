// ==================== СПОСІБ 1: Детальна типізація ====================
// Використовується коли потрібен повний контроль над параметрами типів

Процедура ПриkladДетальноїТипізації()
    
    Массив = Новый Массив;
    
    // Типізація для числового поля (9 знаків, 2 після коми)
    КЧ = Новый КвалификаторыЧисла(9, 2);
    Массив.Добавить(Тип("Число"));
    ОписаниеТиповЧ = Новый ОписаниеТипов(Массив, , , КЧ);
    Массив.Очистить();

    // Типізація для строкового поля (до 50 символів)
    КС = Новый КвалификаторыСтроки(50);
    Массив.Добавить(Тип("Строка"));
    ОписаниеТиповС = Новый ОписаниеТипов(Массив, , , , КС);
    Массив.Очистить();

    // Створення типізованої таблиці значень
    тзНомСПолОстатками = Новый ТаблицаЗначений;
    тзНомСПолОстатками.Колонки.Добавить("Артикул", ОписаниеТиповС);
    тзНомСПолОстатками.Колонки.Добавить("Количество", ОписаниеТиповЧ);
    тзНомСПолОстатками.Колонки.Добавить("Номенклатура");
    тзНомСПолОстатками.Колонки.Добавить("ДокументДвижения");
    
КонецПроцедуры


// ==================== СПОСІБ 2: Компактна типізація ====================
// Використовується для швидкого створення простих типізованих ТЗ

Процедура ПриkladКомпактноїТипізації()
    
    // Створення типізованої таблиці значень одним блоком
    ОписаниеТиповСдОпер = Новый ТаблицаЗначений;
    
    // Строкові поля
    ОписаниеТиповСдОпер.Колонки.Добавить("Наименование", 
        Новый ОписаниеТипов("Строка", , Новый КвалификаторыСтроки(50)));
    
    // Числові поля (без явного вказання кваліфікаторів)
    ОписаниеТиповСдОпер.Колонки.Добавить("Трудоемкость", 
        Новый ОписаниеТипов("Число"));
    ОписаниеТиповСдОпер.Колонки.Добавить("Стоимость", 
        Новый ОписаниеТипов("Число"));
    ОписаниеТиповСдОпер.Колонки.Добавить("Количество", 
        Новый ОписаниеТипов("Число"));
    
    // Посилання на довідник
    ОписаниеТиповСдОпер.Колонки.Добавить("Организация", 
        Новый ОписаниеТипов("СправочникСсылка.СотрудникиОрганизаций"));
    
    // Створення опису типів на основі таблиці значень
    ОписаниеТиповОпераций = Новый ОписаниеТипов(ОписаниеТиповСдОпер);
    
КонецПроцедуры


